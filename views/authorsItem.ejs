      <% data.forEach((current)=>{ %>
      <li><a href="/books/<%= current.id %>"><%= current.title %></a></li>
      <%}) %>
    </ul>
    <% console.log(data,data[0],"THAT WAS DATA") %>
    <a href="/edit/authors/<%= data[0].author_id %>">Edit information</a>
